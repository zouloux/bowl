{
	"name": "wordplate/wordplate",
	"license": "MIT",
	"require": {
		"php": "^7.4|^8.0",
		"wordplate/acf": "^11.0.1",
		"wordplate/framework": "^9.5.2",
		"wpackagist-plugin/admin-ui-cleaner": "^1.1.3",
		"wpackagist-plugin/advanced-custom-fields-pro": "5.9.1",
		"wpackagist-plugin/disable-comments": "^2.1.2",
		"wpackagist-plugin/timber-library": "^1.18.2",
		"wpackagist-plugin/post-types-order": "^1.9.5.6",
		"wpackagist-plugin/resize-image-after-upload": "^1.8.6",
		"wpackagist-plugin/smtp-mailer": "^1.1.2",
		"wpackagist-plugin/flamingo": "^2.2.1",
		"wpackagist-plugin/regenerate-thumbnails" : "^3.1.5",
		"wpackagist-plugin/wp-limit-login-attempts" : "^2.6.3",
		"ext-json": "*"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"extra": {
		"installer-paths": {
			"public/mu-plugins/{$name}": [
				"type:wordpress-muplugin",
				"wpackagist-plugin/admin-ui-cleaner",
				"wpackagist-plugin/advanced-custom-fields-pro",
				"wpackagist-plugin/disable-comments",
				"wpackagist-plugin/hide-updates",
				"wpackagist-plugin/timber-library",
				"wpackagist-plugin/post-types-order",
				"wpackagist-plugin/resize-image-after-upload",
				"wpackagist-plugin/smtp-mailer",
				"wpackagist-plugin/flamingo",
				"wpackagist-plugin/regenerate-thumbnails",
				"wpackagist-plugin/wp-limit-login-attempts"
			],
			"public/plugins/{$name}": [
				"type:wordpress-plugin",
				"wpackagist-plugin/regenerate-thumbnails",
				"wpackagist-plugin/wp-limit-login-attempts"
			],
			"public/themes/{$name}": [
				"type:wordpress-theme"
			]
		},
		"wordpress-install-dir": "public/wordpress"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"require-dev": {
		"symfony/var-dumper": "^5.1"
	}
}
